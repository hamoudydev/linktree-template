---
import Card from "../components/card.astro";

// Put all your links here
const links: Link[] = [
  {
    title: "Login", // The text that will be rendered
    link: "login.soneknet.com", // The link
    icon: "fa-solid fa-home", // An icon from Font Awesome: https://fontawesome.com/search?o=r&m=free
  },
  {
    title: "Server Status",
    link: "stats.uptimerobot.com/BjAVJFDmEA",
    icon: "fa-solid fa-lightbulb",
  },
  {
    title: "Wishlist",
    link: "newegg.io/a529e64",
    icon: "fa-solid fa-gift",
  },
  {
    title: "Donate",
    link: "ko-fi.com/soneknet",
    icon: "fa-solid fa-donate",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Useful links for SonekNet" />
    <meta name="author" content="SonekNet" />
    <meta property="og:title" content="SonekNet" />
    <meta property="og:image" content="favicon.png" />
    <meta property="og:description" content="Useful links for SonekNet" />
    <title>SonekNet</title>
    <style>
      @font-face {
        font-family: Geist;
        src: url(/Geist.ttf);
        font-display: swap;
      }
    </style>
  </head>
  <body
    class="bg-[#000000] flex justify-center items-center w-screen h-screen font-[Geist] text-white/100"
  >
    <main class="w-[80%] flex flex-col gap-8">
      <img class="mx-auto" src="logo.png" alt="" />
      <div class="grid lg:grid-cols-2 gap-4 lg:max-w-[50vw] mx-auto">
        {
          links.map(({ title, link, icon }) => {
            return <Card {title} {link} {icon} />;
          })
        }
      </div>
      <div class="flex justify-center gap-8">
        <!-- Put some social links who have a definitive icon here: -->
      </div>
      <p class="text-center mx-auto">
        <a href="mailto:support@soneknet.com">Email Support</a>
      </p>
    </main>
  </body>
</html>
